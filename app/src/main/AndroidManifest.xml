<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matheus.scenesexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SimpleSceneExampleActivity"
            android:label="Scenes Example" />
        <activity
            android:name=".ViewStateMachineActivity"
            android:label="View State Machine" />
        <activity
            android:name=".SceneStateMachineActivity"
            android:label="Scene State Machine" />

    </application>

</manifest>